acl trusted {
	192.168.57.0/24;
	127.0.0.0/8;
};


acl listen-addresses {
	192.168.57.103;
	192.168.57.102;
	127.0.0.1;
};


options {
	directory "/var/cache/bind";

	allow-query { trusted; };

	forwarders {
		208.67.222.222;
	};

	listen-on port 53 { listen-addresses; };

	recursion yes;
	allow-recursion { trusted; };

	dnssec-validation yes;
};
